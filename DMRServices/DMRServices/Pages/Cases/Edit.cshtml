@page
@model DMRServices.Pages.Cases.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit the Case</h1>

<h4><i>Below are the Case Details provided</i></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Case.ID" />
            <div class="form-group">
                <label asp-for="Case.Type" class="control-label"></label>
                <input asp-for="Case.Type" class="form-control" />
                <span asp-validation-for="Case.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case.Status" class="control-label"></label>
                <input asp-for="Case.Status" class="form-control" />
                <span asp-validation-for="Case.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case.Priority" class="control-label"></label>
                <input asp-for="Case.Priority" class="form-control" />
                <span asp-validation-for="Case.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case.CreatedDate" class="control-label"></label>
                <input asp-for="Case.CreatedDate" class="form-control" />
                <span asp-validation-for="Case.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case.ClosedDate" class="control-label"></label>
                <input asp-for="Case.ClosedDate" class="form-control" />
                <span asp-validation-for="Case.ClosedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case.CustomerId" class="control-label"></label>
                <select asp-for="Case.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Case.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
