@page
@model DMRServices.Pages.Cases.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Cases</h1>

<p>
    <a asp-page="Create">Create New Case</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Case[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Case[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Case[0].Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Case[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Case[0].ClosedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Case[0].Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Case) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.LastName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a> 
                @if (item.Status != "Closed")
                {
                   <span> | </span><a asp-page="/CaseClosure" asp-route-id="@item.ID">Close Case</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
