@page
@model DMRServices.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Order Details</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CraetedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CraetedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.DeliveryDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.DeliveryDate)
        </dd>
        <dt class="col-sm-2">
            Number of Products:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderLineItems.Count)
        </dd>
        <dt class="col-sm-2">
            Total Amount: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToatalAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.LastName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.ID">Edit</a> |
    <a asp-page="/CreateOrderLineItem" asp-route-id="@Model.Order.ID">Add Product</a> |
    <a asp-page="./Index">Back to List</a>
</div>
<br />
<br />
<p><strong>List of Products for this Order</strong></p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ordItem in Model.Order.OrderLineItems)
        {
        <tr>
            <td>@ordItem.Product.Name</td>
            <td>@ordItem.Product.Price</td>
            <td>@ordItem.Quantity</td>
        </tr>
        }
    </tbody>
</table>
