@page
@model DMRServices.Pages.ProductAvailabiltyModel
@{
    ViewData["Title"] = "ProductAvailabilty";
}

<style>
    body{
        background-color: #f2f2f2;
    }
</style>

<h1 class="text-center">Product Availabilty Information</h1>
<br />
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Product Name</th>
            <th>Price Grouping</th>
            <th>Availability</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prd in Model.Products)
        {
            <tr>
                <td>@prd.Name</td>
                <td><strong>@prd.PriceGroup</strong></td>
                <td>
                    @if (@prd.Availability == "Yes")
                    {
                        <span class="badge badge-success"><text style="visibility:hidden;">Y</text></span>
                    }
                    else
                    {
                        <span class="badge badge-danger"><text style="visibility:hidden;">N</text></span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
